type Book {
    id: ID
    name: String
    pageCount: Int,
    author: Author,
    genres: [Genre]
}

input NewBook {
    name: String!
    pageCount: Int!
    genreIds: [ID]
}

input BookFilter {
    name: FilterField
    pageCount: FilterField
    authorName: FilterField
    genreName: FilterField
    pageNumber: Int
    pageSize: Int
}